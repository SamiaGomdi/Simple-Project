pipeline {
    agent any
    
    environment {
        SONARQUBE_URL = 'http://localhost:9000' // URL de votre instance SonarQube
        SONARQUBE_LOGIN = credentials('sonarqube-login') // ID de vos identifiants SonarQube dans Jenkins
        SONARQUBE_PROJECT_KEY = 'simple_project' // Cl√© unique de votre projet dans SonarQube
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('SonarQube Analysis') {
            def scannerHome = tool 'SonarScanner';
                withSonarQubeEnv() {
                sh "${scannerHome}/bin/sonar-scanner"
                }
        }
    }
}
