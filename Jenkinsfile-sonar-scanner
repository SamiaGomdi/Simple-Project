pipeline {
    agent any
    
    environment {
        SONARQUBE_URL = 'http://localhost:9999' // URL de votre instance SonarQube
        SONARQUBE_LOGIN = credentials('sonarqube-login') // ID de vos identifiants SonarQube dans Jenkins
        SONARQUBE_PROJECT_KEY = 'simple-project' // Cl√© unique de votre projet dans SonarQube
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('SonarQube analysis') {
            steps {
                script {
                    // Lancement de l'analyse du code avec SonarQube
                    sh 'sonar-scanner'
                }
            }
        }
    }
}
